<%= simple_form_for @practitioner, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :name %>

  <div class="row" style="background-color:lightgray">
    <div class="span5">
      <p><b>Old Manual Method</b></p>
      <%= f.association :modality %>
    </div>

    <div class="span5">
      <p><b>New Chosen Method</b></p>
      <%= f.association :modality %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                practitioners_path, :class => 'btn' %>
  </div>
<% end %>
